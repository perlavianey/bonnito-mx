    {{!-- showOfferModal(); --}}

    /*const monthNames = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"];
    const d = new Date();

    let topMonth = document.getElementById("top-month")
    topMonth.innerText="Top "+ monthNames[d.getMonth()]*/
    
    let menuBuscador=document.getElementById("menu-buscador")
    let menuBuscadorPhone=document.getElementById("menu-buscador-phone")
    if (navigator.userAgent.match(/Mobile/)){
        menuBuscador.style.display = "none"
        menuBuscadorPhone.style.display = "block"
    }

    let imageModal = document.getElementById("imagen-modal")
    let caption = document.getElementById("caption")

    openModal = (index,top,type) => {
        let topFive;

        if(type==="ear") topFive=top.ear
        else if (type==="decorar") topFive=top.decorar
        else topFive = top.topFive

        if (navigator.userAgent.match(/Mobile/)){
            let checkboxZoom = document.getElementById("zoomCheck")
            checkboxZoom.disabled = true;
        }
        
        let imageModalContainer=document.getElementsByClassName("image-modal-container")[0], modalImg = document.getElementById("imagen-modal");
        let previous = document.getElementById("previous"),next = document.getElementById("next"), number = document.getElementById('number'),close = document.getElementById("close");
        
        modal.style.display = "block";
        
            modalImg.src = "https://firebasestorage.googleapis.com/v0/b/bonnito-mx.appspot.com/o/categories%2F"+topFive[index].category+"%2F"+topFive[index].imagePath+"?alt=media"
        
        
        modalImg.alt = index;
        caption.innerText = index+1

        previous.onclick = () => {
            let currentIndex = parseInt(document.getElementById("imagen-modal").alt)
            currentIndex === 0? currentIndex = topFive.length-1 : currentIndex--
            modalImg.src = "https://firebasestorage.googleapis.com/v0/b/bonnito-mx.appspot.com/o/categories%2F"+topFive[currentIndex].category+"%2F"+topFive[currentIndex].imagePath+"?alt=media";
            modalImg.alt = currentIndex;
            caption.innerText = currentIndex+1
        }

        next.onclick = function(){
            let currentIndex = parseInt(document.getElementById("imagen-modal").alt)
            currentIndex === (topFive.length-1) ? currentIndex = 0 : currentIndex++
            modalImg.src = "https://firebasestorage.googleapis.com/v0/b/bonnito-mx.appspot.com/o/categories%2F"+topFive[currentIndex].category+"%2F"+topFive[currentIndex].imagePath+"?alt=media";
            modalImg.alt = currentIndex;
            caption.innerText = currentIndex+1
        }

        close.onclick = () => closeModal()
    }

    closeModal = () => {
        modal.style.display = "none";
        modalOffer.style.display = "none";
        let checkboxZoom = document.getElementById("zoomCheck")
        checkboxZoom.checked = false;
    }

    if(modal || modalOffer){ //SI HAY MODAL DE OFFER PONER ESTA
        window.onclick = function(event) {
            if (event.target == modal || event.target == modalOffer) closeModal();
        }
    }

    /*if(modal ){
        window.onclick = function(event) {
            if (event.target == modal) closeModal();
        }
    }*/

    let hamburguer = document.getElementById("hamburguer");
    hamburguer.onclick = function(){
        let menu = document.getElementById("menu");
        hamburguer.classList.toggle("change");
        if (menu.style.width === "0" || menu.style.width === ""|| menu.style.width === "0px") {
            menu.style.width = "200px";
            hamburguer.style.position = "fixed"
        } 
        else if(menu.style.width = "200px"){
            menu.style.width = "0";
            hamburguer.style.position = "absolute"
        }
    }

    let header = document.getElementById("menu");
    //let orgullo = document.getElementById("orgullo")
    //let mex = document.getElementById("mex")
    let sticky = header.offsetTop-15;

    let fixHeader = ()=> {
        if (window.outerWidth && window.outerWidth < 577){
            return
        }
        else{
            if (window.pageYOffset > sticky){
                //header.style.marginTop="5px"
                header.classList.add("sticky"); 
                //orgullo.classList.add("sticky")
                //mex.classList.add("sticky")
            } 
            else {
                header.style.marginTop="0"
                header.classList.remove("sticky");
            }
        }
    }
    window.onscroll = ()=> fixHeader()
    
</script>
