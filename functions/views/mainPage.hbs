    <script>
    let modalOffer = document.getElementById("modal-offer"), modalImgOffer = document.getElementById("image-offer"), showOfferLink = document.getElementById("showOfferLink");
    
    showOfferModal = () =>{
        modalOffer.style.display = "block";
        modalImgOffer.src = "https://firebasestorage.googleapis.com/v0/b/bonnito-mx.appspot.com/o/generals%2Fpromotion.jpeg?alt=media";
